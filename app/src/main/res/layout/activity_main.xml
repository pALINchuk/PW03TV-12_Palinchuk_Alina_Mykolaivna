<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:tools="http://schemas.android.com/tools"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:padding="16dp"
                                                     tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mainTitle"
                android:text="Calculator"
                style="@style/TitleStyle"
                android:paddingBottom="8dp"/>

        <EditText
                android:id="@+id/averagePowerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Середньодобова потужність (мВт)"
                android:inputType="numberDecimal" />

        <EditText
                android:id="@+id/stdDeviationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Середньоквадратичне відхилення (мВт)"
                android:inputType="numberDecimal" />

        <EditText
                android:id="@+id/сostInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Вартість електроенергії"
                android:inputType="numberDecimal" />

        <Button
                android:id="@+id/calculateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Розрахувати" />

        <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Результат"
                android:paddingTop="16dp"
                android:textSize="32dp"
        />

        <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>







